{
	"name": "Puppet Development Kit (Community)",
	"dockerFile": "Dockerfile",

	"settings": {
		"terminal.integrated.profiles.linux": {
			"bash": {
				"path": "bash"
			}
		}
	},

	"extensions": [
		"puppet.puppet-vscode",
		"Shopify.ruby-lsp"
	],
	"mounts": [
		"source=${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
	]
}
